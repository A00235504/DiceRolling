<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DiceRolling" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/greendark</item>
        <item name="colorOnPrimary">@color/green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/greendark</item>
        <item name="colorSecondaryVariant">@color/greendark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorSurface">@color/green</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <!--    style defined for the button roll-->
    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">casual</item>
        <item name="circleRadius">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="rippleColor">@color/greenripplebutton</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--    style defined for the title text views-->
    <style name="TitleText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/greendark</item>
        <item name="android:textSize">20sp</item>

    </style>

    <!--    style defined for the radio buttons group-->
    <style name="RadioButtonGroup" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorSecondary">@color/greendark</item>
        <item name="colorControlActivated">@color/greendark</item>
        <item name="colorControlNormal">@color/greendark</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--    style defined for the radio button -->
    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">20sp</item>
    </style>

    <!--    style defined for the result text view -->
    <style name="ResultText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textAlignment">center</item>

    </style>

    <!--    style defined for the history text view -->
    <style name="HistoryText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">25sp</item>
        <item name="android:textAlignment">center</item>

    </style>
</resources>